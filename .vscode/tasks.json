{
    "version": "2.0.0",
    "command": "make",
    "tasks": [
        {
            "label": "make all",
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "type": "shell",
            "args": [
                "-j4"
            ],
            "command": "make",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "make clean",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "make clean",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "run",
            "group":{
                "kind": "test",
                "isDefault": true
            },
            "command": "./app/AdapResoMD-hPF.app",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            }
        }
    ]
}